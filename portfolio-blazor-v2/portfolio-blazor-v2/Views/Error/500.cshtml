@page "/error/500"
@using Microsoft.AspNetCore.Components
@using portfolio_blazor_v2.Client.Pages
<MudPaper Class="d-flex flex-column align-center justify-center" Height="MaxHeight.Medium" Width="100%">
    <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-10 text-center">
        <MudImage Src="wwwroot/images/alert-error.svg" Alt="Server Error" Width="200px" />
        <MudText Typo="Typo.h4" Color="Color.Error" Class="mt-4">500 - Something went wrong</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@GoHome">Back to Home</MudButton>
    </MudContainer>
</MudPaper>

@functions{
    void GoHome() => NavigationManager.NavigateTo("/"); 

}
